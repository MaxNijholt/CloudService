extends layout

block content
        
    nav.navbar.navbar-default( role="navigation" )
        .navbar-header
            a.navbar-brand()= title

    .container-fluid
        .row
            .col-md-6 
                .row
                    .col-md-6
                        .panel.panel-default.loginPanel
                            .panel-heading 
                                h4 Login
                            .panel-body 
                                #login
                                fieldset
                                    form-group
                                        input#usename(type='username', class="form-control", placeholder='Username')
                                    form-group
                                        input#password(type='password', class="form-control", placeholder='Password')
                                    button#login(type='submit', class="form-control btn btn-default") Login
                                    
                    .col-md-6
                        .panel.panel-default
                            .panel-heading 
                                h4 Add Buddy
                            .panel-body 
                                #addBuddy
                                fieldset
                                    form-group
                                        input#inputBuddyName(type='text', class="form-control", placeholder='Name')
                                    form-group
                                        input#inputBuddyChampion(type='text', class="form-control", placeholder='Champion')                     
                                    button#btnAddChampion(type='submit', class="form-control btn btn-default") Add Champion
                .row
                    .col-md-12      
                        .panel.panel-default
                            .panel-heading 
                                h4 Buddy List
                            .panel-body 
                                #buddyList
                                    table.table
                                        thead
                                            th Name
                                            th Champion
                                            th User
                                            th Created
                                        tbody
            .col-md-6      
                .panel.panel-default
                    .panel-heading 
                        h4 Champions
                    .panel-body 
                        #championsList
                            table.table
                                thead
                                    th Name
                                    th Title
                                tbody
        