extends layout

block content
        
    nav.navbar.navbar-default( role="navigation" )
        .navbar-header
            a.navbar-brand()= title

    .container-fluid
        .row
            if user
                p.username Welcome #{user.username}
            else
                .col-md-3
                    .panel.panel-default.loginPanel
                        .panel-heading 
                            h4 Login
                        .panel-body 
                            #login
                            fieldset
                                form-group
                                    input#usename(type='username', class="form-control", placeholder='Username')= user
                                form-group
                                    input#password(type='password', class="form-control", placeholder='Password')
                                button#login(type='submit', class="form-control btn btn-default") Login
                                
                                a(href="/auth/facebook", class="btn btn-block btn-social btn-facebook").socialKnoppen
                                    span(class="fa fa-facebook")  Sign in with Facebook

                                a(href="/auth/google", class="btn btn-block btn-social btn-google").socialKnoppen
                                    span(class="fa fa-google")  Sign in with Google

                                
            .col-md-6
                .panel.panel-default
                    .panel-heading 
                        h4 Add Buddy
                    .panel-body 
                        #addBuddy
                        fieldset
                            .form-horizontal
                                .form-group
                                    label.col-sm-2 Name
                                    .col-sm-10
                                        input#inputBuddyName(type='text', class="form-control", placeholder='Name')
                                .form-group
                                    label.col-sm-2 Champion
                                    .col-sm-10
                                        input#inputBuddyChampion(type='text', class="form-control", placeholder='Champion')  
                                        .help-block Either choose a champion from the list, or make up your own champion.                                                                                        
                                .form-group
                                    .col-sm-12
                                        button#btnAddChampion(type='submit', class="form-control btn btn-default") Add Champion
            .row
                .col-md-12      
                    .panel.panel-default
                        .panel-heading 
                            h4 Buddy List
                        .panel-body 
                            #buddyList
                                table.table
                                    thead
                                        th Name
                                        th Champion
                                        th User
                                        th Created
                                    tbody
            .col-md-6      
                .panel.panel-default
                    .panel-heading 
                        h4 Champions
                    .panel-body 
                        #championsList
                            table.table
                                thead
                                    th Name
                                    th Title
                                tbody
        
